@model SITIO.Entidades.Carrera

@{
	ViewBag.Title = "Modificar carrera";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


@section scripts
{

	@Scripts.Render("~/bundles/jqueryval")
}




<div class="jumbotron">
	<h3><b>Modificar carrera</b></h3>
</div>

<div>
	<a title="Regresar" href="@Url.Action("Inicio", "Carrera")"><img src="~/Images/go-back.ico" alt="Regresar" style="vertical-align: middle;" height="50px" /></a>
</div>

@using (Html.BeginForm("Modificar", "Carrera", new { id = Model.CodigoCarrera }, FormMethod.Post))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">

		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.CodigoCarrera, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.CodigoCarrera, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
				@Html.ValidationMessageFor(model => model.CodigoCarrera, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.CentroE, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(model => model.CentroE.IdCentro, (SelectList)ViewBag.CentrosE, "-- Seleccione un Centro Educativo --", new { @id = "iddropdownlist", @class = "form-control" })
				@Html.ValidationMessageFor(model => model.CentroE, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Cordinador, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(model => model.Cordinador.IdCordinador, (SelectList)ViewBag.Cordinadores, "-- Seleccione un Coordinador --", new { @id = "iddropdownlist", @class = "form-control" })
				@Html.ValidationMessageFor(model => model.Cordinador, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.NombreCarrera, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.NombreCarrera, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.NombreCarrera, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Duracion, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Duracion, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Duracion, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input value="Modificar" class="btn btn-default" title="Modificar" alt="Modificar" src="~/Images/documentediting.ico" type="image" height="60px" align="middle" />
			</div>
		</div>
	</div>
}




