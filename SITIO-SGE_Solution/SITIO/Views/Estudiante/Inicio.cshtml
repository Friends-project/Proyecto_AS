@model IEnumerable<SITIO.Entidades.Estudiante>

@{
	ViewBag.Title = "Estudiante";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
    {

	<script type="text/javascript">

		function ConfirmEliminar(id) {

			var opcion = confirm("¿Desea eliminar el registro?");
			if (opcion == true) {
				location.href = '@Url.Action("Delete", "Estudiante")?id=' + id;
				mensaje = "Registro eliminado";
			} else {
				mensaje = "No se ha eliminado el registro";
			}
			alert(mensaje);
		}

	</script>



	@if (ViewBag.Message != null)
	{


		<script type="text/javascript">

			$(document).ready(function() {

				alert(@ViewBag.Message);

			});
		</script>

	}

}




<style type="text/css">

	a {
		cursor: pointer
	}

	table {
		text-align: center;
	}

	td {
		text-align: center;
	}

	th {
		text-align: center;
	}
</style>



<div class="jumbotron">
	<h3><b>Estudiante</b></h3>
</div>
<hr />
<div class="col-sm-2 col-md-2 col-xl-2 pull-left">
	<a title="Agregar nuevo" href="@Url.Action("Agregar", "Estudiante")"><img src="~/Images/new-file.ico" alt="Agregar nuevo" style="vertical-align: middle;" height="50px" /></a>
</div>
<div class="col-sm-2 col-md-2 col-xl-2 pull-right">
	<a title="Exportar" href="@Url.Action("ExporttoExcel", "Estudiante")"><img src="~/Images/export.ico" alt="Exportar" style="vertical-align: middle;" height="50px" /></a>
</div>
<table style="border: 1px solid gray" class="table">
	<tr>
		<th style="border: 1px solid gray">
			@Html.DisplayNameFor(model => model.IdEstudiante)
		</th>
		<th style="border: 1px solid gray ">
			@Html.DisplayNameFor(model => model.Usuario)
		</th>
		<th style="border: 1px solid gray ">
			@Html.DisplayNameFor(model => model.Carrera)
		</th>
		<th style="border: 1px solid gray ">
			@Html.DisplayNameFor(model => model.NombreEstudiante)
		</th>
		<th style="border: 1px solid gray; border-right: 1px solid gray ">
			@Html.DisplayNameFor(model => model.DPI)
		</th>
		<th style="border: 1px solid gray; border-right: 1px solid gray ">
			@Html.DisplayNameFor(model => model.FechaIngreso)
		</th>
		<th style="border: 1px solid gray ">
			@Html.DisplayNameFor(model => model.Telefono)
		</th>
		<th style="border: 1px solid gray; border-right: 1px solid gray ">
			@Html.DisplayNameFor(model => model.Direccion)
		</th>
		<th style="border: 1px solid gray; border-right: 1px solid gray ">
			@Html.DisplayNameFor(model => model.Edad)
		</th>
		<th style="border: 1px none; border-right: 1px hidden #dfdfdf; border-top: 1px hidden #dfdfdf; border-bottom: 1px solid #dfdfdf "></th>
	</tr>
	@if (Model == null)
	{

	}
	else
	{
		foreach (var item in Model)
		{
			<tr>
				<td style="	border: 1px solid #dfdfdf">
					@Html.DisplayFor(modelItem => item.IdEstudiante)
				</td>
				<td style="	border: 1px solid #dfdfdf">
					@Html.DisplayFor(modelItem => item.Usuario.UsuarioEmail)
				</td>
				<td style=" border: 1px solid #dfdfdf ">
					@Html.DisplayFor(modelItem => item.Carrera.NombreCarrera)
				</td>
				<td style="	border: 1px solid #dfdfdf">
					@Html.DisplayFor(modelItem => item.NombreEstudiante)
				</td>
				<td style="border-right: 1px solid #dfdfdf; border: 1px solid #dfdfdf">
					@Html.DisplayFor(modelItem => item.DPI)
				</td>
				<td style="border-right: 1px solid #dfdfdf; border: 1px solid #dfdfdf">
					@Html.DisplayFor(modelItem => item.FechaIngreso)
				</td>
				<td style="	border: 1px solid #dfdfdf">
					@Html.DisplayFor(modelItem => item.Telefono)
				</td>
				<td style="border-right: 1px solid #dfdfdf; border: 1px solid #dfdfdf">
					@Html.DisplayFor(modelItem => item.Direccion)
				</td>
				<td style="border-right: 1px solid #dfdfdf; border: 1px solid #dfdfdf">
					@Html.DisplayFor(modelItem => item.Edad)
				</td>
				<td style="border: 1px none; border-right: 1px solid #dfdfdf; border-bottom: 1px solid #dfdfdf ">
					<a title="Modificar" id="btnModificar" href="@Url.Action("Modificar", "Estudiante", new { id = item.IdEstudiante })"><img src="~/Images/documentediting.ico" alt="Modificar" style="vertical-align: middle;" height="25px" /></a>
					<a title="Eliminar" onclick="ConfirmEliminar(@item.IdEstudiante)" id="btnEliminar"><img src="~/Images/delete-file.ico" alt="Eliminar" style="vertical-align: middle;" height="25px" /></a>
				</td>
			</tr>
		}
	}



</table>
